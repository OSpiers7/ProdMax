{
  "name": "prodmax-backend",
  "version": "1.0.0",
  "description": "ProdMax Backend API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run db:switch:production && npx prisma generate && npx tsc",
    "build:local": "npm run db:switch:local && prisma generate && tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:switch": "node switch-database.js auto",
    "db:switch:local": "node switch-database.js local",
    "db:switch:production": "node switch-database.js production"
  },
  "keywords": ["productivity", "api", "scheduling"],
  "author": "Oscar Spiers",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.4",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "zod": "^3.22.4",
    "express-rate-limit": "^7.1.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1"
  }
}
